{
  "name": "plastic-schemas",
  "version": "0.0.2-0",
  "description": "EN 10204 certificates JSON schema for plastics and dependencies developed by S1Seven",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./*.js",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,json}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-version": "node ./update-version",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "lint-staged": "^10.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "release-it": "*"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "format",
    "lint:staged"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint"
      ],
      "after:bump": "npm run update-version v${version} ${name}",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/plastic-schemas.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/s1seven/plastic-schemas/issues"
  },
  "homepage": "https://github.com/s1seven/plastic-schemas#readme"
}
