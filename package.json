{
  "name": "coa-schemas",
  "version": "0.1.0",
  "description": "Certificates of Analysis (CoA) as defined by EN 10204, developed by S1Seven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/CoA-schemas.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/s1seven/CoA-schemas/issues"
  },
  "homepage": "https://github.com/s1seven/CoA-schemas#readme",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./*.js",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,json}\"",
    "test": "jest --runInBand",
    "update-version": "node ./utils/update-version.js",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it",
    "generate-html": "node ./utils/generate-html-cli",
    "generate-pdf": "node ./utils/generate-pdf-cli"
  },
  "devDependencies": {
    "@markedjs/html-differ": "^3.0.4",
    "@s1seven/schema-tools-generate-html": "^0.0.25",
    "@s1seven/schema-tools-generate-pdf": "^0.0.16",
    "@s1seven/schema-tools-utils": "^0.0.22",
    "ajv": "^8.8.0",
    "ajv-formats": "^2.1.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "pdf2pic": "^2.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "2.5.1",
    "release-it": "*"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npm run update-version v${version} ${name}",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "jest": {
    "rootDir": ".",
    "maxConcurrency": 2,
    "testRegex": ".*\\.spec\\.js$",
    "moduleFileExtensions": [
      "js",
      "node"
    ]
  }
}
